<div class="row">
  <div class="col-xs-offset-4 col-xs-4 text-center">
    <h1>{{customer.name}}, thank you for your order!</h1>
    <br>
  </div>
</div>

<div class="row">
  <div class="col-xs-offset-2 col-xs-8 text-left">
    <h2>Order Detail:</h2><br>

    {{#each donuts}}
    <div class="row">
      <div class="col-xs-5 text-left">
        <h3>{{name}} (${{price}})</h3>
      </div>
      <div class="col-xs-3 text-left">
        <h3>x {{quantity}}</h3>
      </div>
      <div class="col-xs-3 text-left">
        <h3>${{subtotal}}</h3>
      </div>
    </div>
    {{/each}}
    <div class="row">
      <br>
      <div class="col-xs-12 text-left"><h4>Total: ${{total}}</h4></div>
    </div>
    <div class="row">
      <div class="col-xs-2 text-left">
        <br><br>
        <h4><a href="/orders">Back to Orders</a></h4>
      </div>
    </div>
  </div>
</div>
